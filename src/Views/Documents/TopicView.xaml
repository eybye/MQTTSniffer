<UserControl x:Class="MQTTSniffer.Views.Documents.TopicView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignWidth="300" d:DesignHeight="400">
  <Grid RowDefinitions="*,Auto">
    <ListBox x:Name="Topics" Grid.Row="0" Items="{Binding TopicItems}" SelectionMode="Single" SelectedItem="{Binding SelectedItem}" >
      <ListBox.ItemTemplate>
        <DataTemplate>
          <Border BorderThickness="1" BorderBrush="Black" CornerRadius="4" Padding="4">
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="{Binding MessageReceived}" Margin="0,0,5,0" FontStyle="Italic" FontSize="8"/>
              <TextBlock Text="{Binding Topic}"/>
            </StackPanel>
          </Border>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
    <Border Grid.Row="1" BorderThickness="1" BorderBrush="Black" CornerRadius="4" Padding="4">
      <TextBox Text="{Binding SelectedContent}" Height="100" />
    </Border>
  </Grid>
</UserControl>
