<UserControl x:Class="MQTTSniffer.Views.BrokerView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:id="clr-namespace:Dock.Avalonia;assembly=Dock.Avalonia"
             xmlns:idc="clr-namespace:Dock.Avalonia.Controls;assembly=Dock.Avalonia"
             mc:Ignorable="d"
             d:DesignWidth="800" d:DesignHeight="40">
  <Grid ColumnDefinitions="Auto,Auto,Auto" RowDefinitions="*" HorizontalAlignment="Left" Margin="4">
    <Button Grid.Row="0" Grid.Column="0" Content="Connect" Margin="5,0,0,0" Command="{Binding OnConnectCommand}" />
    <Button Grid.Row="0" Grid.Column="1" Content="Disconnect" Margin="5,0,0,0" Command="{Binding OnDisconnectCommand}" />
  </Grid>
</UserControl>
